<search:search xmlns:search='http://marklogic.com/appservices/search'>
    <search:options>
        <search:constraint name='year'>
            <search:range type='xs:gYear' facet='true'>
                <search:facet-option>frequency-order</search:facet-option>
                <search:facet-option>descending</search:facet-option>
                <search:facet-option>limit=50</search:facet-option>
                <search:element ns='http://marklogic.com/xdmp/json/basic' name='year'/>
            </search:range>
        </search:constraint>
        <search:constraint name='price'>
            <search:range type='xs:double' facet='true'>
                <search:bucket lt='20.00' name='lt20.00'>&lt; 20.00</search:bucket>
                <search:bucket ge='20.00' lt='40.00' name='20-40'>20-40</search:bucket>
                <search:bucket ge='40.00' name='40.00'>&gt;= 40</search:bucket>
                <search:facet-option>item-order</search:facet-option>
                <search:facet-option>ascending</search:facet-option>
                <search:facet-option>limit=50</search:facet-option>
                <search:element ns='http://marklogic.com/xdmp/json/basic' name='price'/>
            </search:range>
        </search:constraint>
    </search:options>
</search:search>
